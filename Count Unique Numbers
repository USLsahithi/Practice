public class Main
{
	public static void main(String[] args) {
	    int rem;
	    int count=0;
        String str="1210";
        int n = Integer.parseInt(str);
        while(n>0){
            rem=n%10;
            if(rem!=0){
                count++;
            }
            n=n/10;
        }
        System.out.println(count);
	}
}
